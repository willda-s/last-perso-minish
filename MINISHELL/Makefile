NAME = minishell

INCLUDE = -Iincludes

BUILTINS_DIR = builtins/

BUILTINS_FILES =	ft_pwd.c\
					ft_env.c\
					ft_exit.c\
					ft_echo.c\
					ft_cd.c\
					ft_export.c\
					ft_unset.c\
					exec_builtins.c\
					main_builtins.c

UTILS =

MAKEFLAGS += --no-print-directory

CC	= cc
CFLAGS	= -Wall -Wextra -Werror -MMD -g3

FILE =	$(addprefix $(BUILTINS_DIR), $(BUILTINS_FILES))\
		$(UTILS)
		
OBJ_DIR = obj/

OBJ = $(addprefix $(OBJ_DIR), $(FILE:.c=.o))
DEPD = $(addprefix $(OBJ_DIR), $(FILE:.c=.d))

LIBFT_DIR = libft
LIBFT = $(LIBFT_DIR)/libft.a

all: banner lib $(NAME)

$(NAME): $(OBJ) $(LIBFT)
		$(CC) $(CFLAGS) -lreadline $(OBJ) -o $(NAME) $(LIBFT)
		@echo "$(PURPLE)ðŸ‘¾ Minishell compilation done ! $(RESET)"

$(OBJ_DIR)%.o: %.c Makefile
			@mkdir -p $(dir $@)
			@echo "$(YELLOW) Compiling ... $(BLUE)$(notdir $<) $(RESET)"
			@$(CC) $(CFLAGS) $(INCLUDE) -c $< -o $@

-include $(DEPD)

$(LIBFT):
	@make -s -C $(LIBFT_DIR)

clean:
	$(MAKE) -C $(LIBFT_DIR) clean
	rm -rf $(OBJ_DIR)

fclean:	clean
	$(MAKE) -C $(LIBFT_DIR) fclean	
	rm -f $(NAME)      

lib:
	@echo "$(GREEN)ðŸ¦€ Compiling libft in progress... $(RESET)"
	$(MAKE) -C $(LIBFT_DIR)
	@echo "$(GREEN)ðŸ¦€ Libft compilation done ! $(RESET)"
	@echo "$(PURPLE)ðŸ‘¾ Compiling Minishell in progress ... $(RESET)"

re: fclean all

banner:
	@clear
	@echo "$(GREEN_DARKER)â–â–€â–€â–€â–€â–€â–€â–€â–€â–€â–€â–€â–€â–€â–€â–€â–€â–€â–€â–€â–€â–€â–€â–€â–€â–€â–€â–€â–€â–€â–€â–€â–€â–€â–€â–€â–€â–€â–€â–€â–€â–€â–€â–€â–€â–€â–€â–€â–€â–€â–€â–€â–€â–€â–€â–Œ$(RESET)"
	@echo "$(GREEN_DARKER)â–                                                      â–Œ$(RESET)"
